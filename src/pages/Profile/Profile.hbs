<main class="profile">
    <aside class="profile__back-btn">
        {{#> IconButton }}
            <img src="../../assets/arrowRight.svg" alt="Кнопка назад">
        {{/IconButton}}
    </aside>
    <form class="profile__form">
        {{> ProfileAvatar }}
        <h3 class="profile__userName">Имя</h3>
        {{#if isPasswordChanging}}
            <div class="profile__password">
                {{> ProfileInput label="Старый пароль" name="oldPassword" type="password" value="12345678"}}
                {{> Divider}}
                {{> ProfileInput label="Новый пароль" name="newPassword" type="password" value="12345678"}}
                {{> Divider}}
                {{> ProfileInput label="Повторите новый пароль" name="newPassword" type="password" value="12345678"}}
            </div>
        {{else}}
            <div class="profile__user-data">
                {{> ProfileInput label="Почта" name="email" type="email" value="pochta@yandex.ru" }}
                {{> Divider}}
                {{> ProfileInput label="Логин" name="login" type="text" value="ivanivanov" }}
                {{> Divider}}
                {{> ProfileInput label="Имя" name="first_name" type="text" value="Иван" }}
                {{> Divider}}
                {{> ProfileInput label="Фамилия" name="second_name" type="text" value="Иванов" }}
                {{> Divider}}
                {{> ProfileInput label="Имя в чате" name="display_name" type="text" value="Иван" }}
                {{> Divider}}
                {{> ProfileInput label="Телефон" name="phone" type="tel" value="+7 (909) 967 30 30" }}
            </div>
        {{/if}}
        {{#if isSomeChanging}}
            {{> Button title="Сохранить" className="profile__save-btn"}}
        {{else}}
            <div class="profile__footer">
                <div>{{isSomeChanging}}</div>
                {{> Button title="Изменить данные" buttonType="outlined"}}
                {{> Divider}}
                {{> Button title="Изменить пароль" buttonType="outlined"}}
                {{> Divider}}
                {{> Button title="Выйти" buttonType="outlined" className="profile__exit-button"}}
            </div>
        {{/if}}
    </form>
</main>
