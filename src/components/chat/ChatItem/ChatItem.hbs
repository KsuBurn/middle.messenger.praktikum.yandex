<div class='chat-item'>
    {{> ChatAvatar avatar=avatar }}
    <div class='chat-item__content'>
        <span class='chat-item__name'>{{name}}</span>
        <span class='chat-item__message'>{{message}}</span>
    </div>
    <div class='chat-item__aside'>
        <span class='chat-item__time'>{{time}}</span>
        {{#if unread}}
            <span class='chat-item__unread'>{{unread}}</span>
        {{/if}}
    </div>
</div>
